---
import {
  SITE_AUTHOR,
  AUTHOR_EMAIL,
} from "../consts";
const today = new Date();
---

<footer id="contact" class="border-t border-gray-800 bg-gray-900 text-white">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-10 md:grid-cols-4">
      <div>
        <h3 class="text-lg font-semibold text-blue-400">{SITE_AUTHOR}</h3>
        <p class="mt-3 text-gray-400">Social media links</p>

        <div class="mt-6 flex space-x-4" aria-label="Social links">
          <a
            href="https://github.com/AlexITC"
            class="text-gray-400 transition-colors hover:text-white"
            aria-label="GitHub"
          >
            <svg
              class="h-6 w-6"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
          <a
            href="https://www.linkedin.com/in/alexis-hernandez/"
            class="text-gray-400 transition-colors hover:text-white"
            aria-label="LinkedIn"
          >
            <svg
              class="h-6 w-6"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
          </a>
          <a
            href="https://x.com/alexitcdev"
            class="text-gray-400 transition-colors hover:text-white"
            aria-label="X/Twitter"
          >
            <svg
              class="h-6 w-6"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <div>
        <h4
          class="text-sm font-semibold tracking-wider text-gray-300 uppercase"
        >
          Sections
        </h4>
        <ul class="mt-4 space-y-3 text-gray-400">
          <li>
            <a href="/" class="transition-colors hover:text-blue-400">Home</a>
          </li>
          <li>
            <a href="/blog/" class="transition-colors hover:text-blue-400"
              >Blog</a
            >
          </li>
          <li>
            <a
              href="/testimonials"
              class="transition-colors hover:text-blue-400">Testimonials</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h4
          class="text-sm font-semibold tracking-wider text-gray-300 uppercase"
        >
          Contact
        </h4>
        <ul class="mt-4 space-y-3 text-gray-400">
          <li>
            <a
              class="transition-colors hover:text-blue-400"
              href={`mailto:${AUTHOR_EMAIL}`}>{AUTHOR_EMAIL}</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h4
          class="text-sm font-semibold tracking-wider text-gray-300 uppercase"
        >
          Newsletter
        </h4>
        <p class="mt-4 text-gray-400">
          Get occasional updates about new posts and projects.
        </p>
        {/** Zoho Campaigns Opt-ins (submit opens a new tab only) **/}
        <div id="sf3zef500b1d4e2890ea548a1a597de5595a233640654010d0f054b542799168a108" data-type="signupform">
          <form
            id="zcampaignOptinForm"
            class="mt-4 flex w-full max-w-sm"
            action="https://zcsub-cmpzourl.maillist-manage.com/weboptin.zc"
            method="POST"
            target="_blank"
            novalidate
          >
            <input
              type="email"
              id="EMBED_FORM_EMAIL_LABEL"
              name="CONTACT_EMAIL"
              required
              placeholder="you@example.com"
              class="flex-1 rounded-l-md border border-gray-700 bg-gray-800 px-3 py-2 text-gray-100 placeholder-gray-500 focus:ring-2 focus:ring-blue-500 focus:outline-none"
            />
            <button
              type="submit"
              id="zcWebOptin"
              name="SIGNUP_SUBMIT_BUTTON"
              class="rounded-r-md border border-blue-600 bg-blue-600 px-4 py-2 text-white hover:bg-blue-500"
            >Subscribe</button>

            {/** Required Zoho hidden fields **/}
            <input type="hidden" id="submitType" name="submitType" value="optinCustomView" />
            <input type="hidden" id="formType" name="formType" value="QuickForm" />
            <input type="hidden" name="zx" id="cmpZuid" value="1357f91a3" />
            <input type="hidden" name="zcvers" value="3.0" />
            <input type="hidden" id="mode" name="mode" value="OptinCreateView" />
            <input type="hidden" id="zcld" name="zcld" value="1151de153ff21f970" />
            <input type="hidden" id="zctd" name="zctd" value="1151de153ff21f7a9" />
            <input type="hidden" id="document_domain" value="" />
            <input type="hidden" id="zc_Url" value="zcsub-cmpzourl.maillist-manage.com" />
            <input type="hidden" id="new_optin_response_in" value="0" />
            <input type="hidden" id="duplicate_optin_response_in" value="0" />
            <input type="hidden" name="zc_trackCode" id="zc_trackCode" value="ZCFORMVIEW" />
            <input type="hidden" id="zc_formIx" name="zc_formIx" value="3zef500b1d4e2890ea548a1a597de5595a233640654010d0f054b542799168a108" />
            <input type="hidden" id="viewFrom" value="URL_ACTION" />
            <span style="display:none" id="dt_CONTACT_EMAIL">1,true,6,Contact Email,2</span>
          </form>
        </div>
      </div>
    </div>

    <div
      class="mt-10 flex flex-col items-center justify-between border-t border-gray-800 pt-6 text-sm text-gray-400 md:flex-row"
    >
      <p>{today.getFullYear()} {SITE_AUTHOR}. All rights reserved.</p>
      <div class="mt-3 space-x-4 md:mt-0">
        <a href="/rss.xml" class="hover:text-blue-400">RSS</a>
      </div>
    </div>
  </div>
</footer>
