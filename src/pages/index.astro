---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// Get recent blog posts for featured section
const posts = (await getCollection('blog'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);

// Get recent projects for featured section
const projects = (await getCollection('projects'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);

// Get testimonials
const testimonialsData = await import('../content/testimonials.json');
const allTestimonials = testimonialsData.default;
// Shuffle and select 3 random testimonials
const testimonials = allTestimonials
    .sort(() => Math.random() - 0.5)
    .slice(0, 3);
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <!-- Hero Section -->
    <section id="home" class="pt-20 pb-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
            <div class="text-center">
                <div class="mb-8">
                    <img src="https://github.com/AlexITC.png" alt="Alexis Hernandez" class="w-32 h-32 rounded-full mx-auto mb-6 border-4 border-blue-500 shadow-lg">
                    <h1 class="text-4xl md:text-6xl font-bold mb-4">
                        Hi, I'm <span class="text-blue-400 animate-pulse-glow">Alexis Hernandez</span>
                    </h1>
                    <p class="text-xl md:text-2xl text-gray-300 mb-8">
                        Software Engineer & Blockchain Developer
                    </p>
                </div>
                <div class="max-w-4xl mx-auto text-lg text-gray-300 leading-relaxed">
                    <p class="mb-6">
                        Experienced Software Engineer with 18+ years of programming experience, specializing in high-performance systems and blockchain technologies. Self-taught programmer who learned Assembler by reverse engineering Sony Ericsson mobile device firmware.
                    </p>
                    <p class="mb-6">
                        Skilled in multiple programming languages including Scala, Java, C, Assembler, Ruby, Rust, and JavaScript/TypeScript. I have extensive experience with blockchain development on Bitcoin, Ethereum, and Solana platforms.
                    </p>
                    <p class="mb-8">
                        "I am a human who genuinely cares about helping others, training developers, coaching interns, and supporting customers."
                    </p>
                    <div class="flex flex-wrap justify-center gap-4">
                        <a href="#projects" class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors">View Projects</a>
                        <a href="#contact" class="border-2 border-blue-400 text-blue-400 px-8 py-3 rounded-lg hover:bg-gray-800 transition-colors">Get In Touch</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Blog Posts -->
    <section id="blog" class="py-16 bg-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Featured Blog Posts</h2>
                <p class="text-gray-300 text-lg">Thoughts on software engineering, blockchain, and technology</p>
                <a href="/blog" class="inline-block mt-4 text-blue-400 hover:text-blue-300 font-semibold transition-colors">View All Posts →</a>
            </div>
            <div class="grid md:grid-cols-3 gap-8">
                {posts.map((post) => (
                    <article class="bg-gray-900 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                        <div class="p-6">
                            <h3 class="text-xl font-bold mb-3 text-gray-100">{post.data.title}</h3>
                            <p class="text-gray-300 mb-4">{post.data.description}</p>
                            <a href={`/blog/${post.id}/`} class="text-blue-400 hover:underline font-semibold">Read More →</a>
                        </div>
                    </article>
                ))}
                <!-- Placeholder posts if we don't have 3 yet -->
                {posts.length < 2 && (
                    <article class="bg-gray-900 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow opacity-75">
                        <div class="p-6">
                            <h3 class="text-xl font-bold mb-3 text-gray-100">Reverse Engineering Mobile Firmware</h3>
                            <p class="text-gray-300 mb-4">My journey learning assembler through reverse engineering Sony Ericsson mobile device firmware...</p>
                            <span class="text-gray-500 font-semibold">Coming Soon...</span>
                        </div>
                    </article>
                )}
                {posts.length < 3 && (
                    <article class="bg-gray-900 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow opacity-75">
                        <div class="p-6">
                            <h3 class="text-xl font-bold mb-3 text-gray-100">The Future of Self-Hosting</h3>
                            <p class="text-gray-300 mb-4">Why self-hosting infrastructure matters and how to get started with modern deployment strategies...</p>
                            <span class="text-gray-500 font-semibold">Coming Soon...</span>
                        </div>
                    </article>
                )}
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Featured Projects</h2>
                <p class="text-gray-300 text-lg">Open source contributions and personal projects</p>
                <a href="/projects" class="inline-block mt-4 text-blue-400 hover:text-blue-300 font-semibold transition-colors">View All Projects →</a>
            </div>
            <div class="grid md:grid-cols-3 gap-8">
                {projects.map((project) => (
                    <article class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                        <div class="p-6">
                            <h3 class="text-xl font-bold mb-3 text-gray-100">{project.data.title}</h3>
                            <p class="text-gray-300 mb-4">{project.data.description}</p>
                            <a href={`/projects/${project.id}/`} class="text-blue-400 hover:underline font-semibold">View Project →</a>
                        </div>
                    </article>
                ))}
                {projects.length < 2 && (
                    <article class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow opacity-75">
                        <div class="p-6">
                            <h3 class="text-xl font-bold mb-3 text-gray-100">Cryptocurrency Block Explorer</h3>
                            <p class="text-gray-300 mb-4">Blockchain explorer for multiple cryptocurrencies with real-time transaction monitoring and analytics...</p>
                            <span class="text-gray-500 font-semibold">Coming Soon...</span>
                        </div>
                    </article>
                )}
                {projects.length < 3 && (
                    <article class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow opacity-75">
                        <div class="p-6">
                            <h3 class="text-xl font-bold mb-3 text-gray-100">Chrome ScalaJS Template</h3>
                            <p class="text-gray-300 mb-4">Template for building Chrome browser extensions using ScalaJS with modern development workflows...</p>
                            <span class="text-gray-500 font-semibold">Coming Soon...</span>
                        </div>
                    </article>
                )}
            </div>
        </div>
    </section>

    <!-- Conference Talks -->
    <section id="talks" class="py-16 bg-gray-800">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Conference Talks</h2>
                <p class="text-gray-300 text-lg">Speaking at international conferences around the world</p>
            </div>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="bg-gray-900 rounded-lg overflow-hidden shadow-lg">
                    <div class="aspect-video bg-gray-200 flex items-center justify-center">
                        <div class="text-center">
                            <svg class="w-16 h-16 text-gray-400 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
                            </svg>
                            <p class="text-gray-500">Video Coming Soon</p>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2">Scaling Blockchain Applications</h3>
                        <p class="text-gray-300 mb-2">ScalaChain Conference 2023</p>
                        <p class="text-sm text-gray-500">Berlin, Germany</p>
                    </div>
                </div>
                <div class="bg-gray-900 rounded-lg overflow-hidden shadow-lg">
                    <div class="aspect-video bg-gray-200 flex items-center justify-center">
                        <div class="text-center">
                            <svg class="w-16 h-16 text-gray-400 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
                            </svg>
                            <p class="text-gray-500">Video Coming Soon</p>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2">Self-Hosting in the Modern Era</h3>
                        <p class="text-gray-300 mb-2">DevOps World 2023</p>
                        <p class="text-sm text-gray-500">San Francisco, CA</p>
                    </div>
                </div>
                <div class="bg-gray-900 rounded-lg overflow-hidden shadow-lg">
                    <div class="aspect-video bg-gray-200 flex items-center justify-center">
                        <div class="text-center">
                            <svg class="w-16 h-16 text-gray-400 mx-auto mb-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
                            </svg>
                            <p class="text-gray-500">Video Coming Soon</p>
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2">Functional Programming in Practice</h3>
                        <p class="text-gray-300 mb-2">Lambda Days 2022</p>
                        <p class="text-sm text-gray-500">Kraków, Poland</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Testimonials -->
    <section id="testimonials" class="py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">Testimonials</h2>
                <p class="text-gray-300 text-lg">What colleagues and clients say about working with me</p>
                <a href="/testimonials" class="inline-block mt-4 text-blue-400 hover:text-blue-300 font-semibold transition-colors">View All Testimonials →</a>
            </div>
            <div class="grid md:grid-cols-3 gap-8">
                {testimonials.map((testimonial) => (
                    <div class="bg-gray-800 rounded-lg p-6 shadow-lg">
                        <div class="mb-4">
                            <svg class="w-8 h-8 text-blue-500 mb-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <p class="text-gray-300 mb-6 italic">
                            "{testimonial.description}"
                        </p>
                        <div class="flex items-center">
                            <img src={testimonial.image} alt={testimonial.author} class="w-10 h-10 rounded-full mr-3 object-cover" />
                            <div>
                                <p class="font-semibold">{testimonial.author}</p>
                                <p class="text-sm text-gray-500">{testimonial.position}</p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Smooth scrolling script -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const links = document.querySelectorAll('a[href^="#"]');
            
            links.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetId = link.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    
                    if (targetElement) {
                        const offsetTop = targetElement.offsetTop - 80; // Account for fixed header
                        window.scrollTo({
                            top: offsetTop,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });
    </script>
</BaseLayout>